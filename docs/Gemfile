source "https://rubygems.org"

# Web server for Jekyll (removed from Ruby 3.0+)
gem "webrick", "~> 1.8"

# Minimal Jekyll setup without Sass processing
gem "jekyll", "~> 3.9.0"
gem "minima", "~> 2.5"
gem "kramdown", "~> 2.3.0"
gem "kramdown-parser-gfm", "~> 1.1.0"

# Basic plugins only
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-seo-tag", "~> 2.6"
  gem "jekyll-sitemap", "~> 1.3"
end 