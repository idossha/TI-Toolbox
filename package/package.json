{
  "name": "ti-toolbox",
  "productName": "TI-Toolbox",
  "version": "2.2.1",
  "description": "Temporal Interference Toolbox - Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "neuroscience",
    "brain-stimulation",
    "temporal-interference",
    "simnibs",
    "neuroimaging"
  ],
  "author": {
    "name": "Ido Haber",
    "email": "ihaber@wisc.edu"
  },
  "license": "MIT",
  "repository": "git+https://github.com/idossha/TI-toolbox.git",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "dockerode": "^4.0.9",
    "electron-log": "^5.4.3",
    "execa": "^8.0.1",
    "fs-extra": "^11.3.2"
  },
  "build": {
    "appId": "edu.wisc.ti-toolbox",
    "productName": "TI-Toolbox",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "docker",
        "to": "docker",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "docker/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "notarize": {
        "teamId": "3BMY24SA43"
      }
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Science",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
